#!/bin/sh
#
# Wrapper around Intel C to ensure this is the compiler we are running with mpi
#


# First ensure that we follow symlink if needed
LINK=`readlink $0`

# Am I a symlink?
if [ "x$LINK" != "x" ]; then
    BIN=`dirname $LINK`
else
    BIN=`dirname $0`
fi

export DYLD_LIBRARY_PATH=$BIN/../lib
icc $* -DUSE_MPI -lmpi -L$BIN/../lib -I$BIN/../include
